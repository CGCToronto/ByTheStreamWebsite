{
   "volume": "28",
   "id": "12_luzhenbang_s",
   "character": "simplified",
   "category": "诗意心情",
   "title": "复活节有感",
   "author": "卢振邦",
   "content": [
       "  皮肤寸裂鞭痕满",
       "  手足钉穿血汗流",
       "  两盗齐悬分左右",
       "  七言说罢众人愁",
       "  三天复活离茔墓",
       "  十架施恩世上留",
       "  福泽绵长来卸罪",
       "  灵光普照去烦忧"
   ]
}
